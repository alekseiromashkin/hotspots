<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="NightAdjusted.Theme.Hotspots" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>
    </style>

    <style name="PlatformAdjusted.Theme.Hotspots" parent="NightAdjusted.Theme.Hotspots">

    </style>

    <style name="Theme.Hotspots" parent="PlatformAdjusted.Theme.Hotspots">
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:colorPrimary">@color/color_primary</item>
        <item name="android:colorPrimaryDark">@color/white_60</item>
        <item name="android:colorAccent">@color/color_accent</item>

        <item name="android:colorBackground">@color/app_background</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

        <item name="android:enforceStatusBarContrast"  tools:targetApi="q">true</item>
        <item name="android:enforceNavigationBarContrast"  tools:targetApi="q">true</item>
    </style>
</resources>
